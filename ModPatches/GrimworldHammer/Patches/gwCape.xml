<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationFindMod" > 
      <mods>
        <li>XML Extensions</li>
      </mods>
      <match Class="XmlExtensions.OptionalPatch">
        <modId>Yy.CapesandArmor</modId>
        <key>HoodToggle</key>
        <defaultValue>true</defaultValue>
        <caseTrue>
          <Operation Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="GW_AM_PriestHood"]/apparel</xpath>
            <value>
              <layers>
                <li>EyeCover</li>
              </layers>
              <drawData>
                <dataNorth>
                  <layer>90</layer>
                </dataNorth>
              </drawData>
            </value>
          </Operation>
          <Operation Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="GW_AM_CatachanBandana"]/apparel</xpath>
            <value>
              <layers>
                <li>EyeCover</li>
              </layers>
              <drawData>
                <dataNorth>
                  <layer>90</layer>
                </dataNorth>
              </drawData>
            </value>
          </Operation>
        </caseTrue>
      </match>
      <nomatch Class="PatchOperationSequence" >
        <operations>
          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="GW_AM_RatlingCloak"]/apparel</xpath>
            <value>
              <layers>
                <li>Cape</li>
                <li>Armor_Cape</li>
              </layers>
              <drawData>
                <dataNorth>
                  <layer>90</layer>
                </dataNorth>
              </drawData>
            </value>
          </li>

          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="GW_AM_RatlingCloakGW_AM_CommissarOuter"]/apparel</xpath>
            <value>
              <layers>
                <li>Cape</li>
                <li>Armor_Cape</li>
              </layers>
              <drawData>
                <dataNorth>
                  <layer>90</layer>
                </dataNorth>
              </drawData>
            </value>
          </li>
        </operations>
      </nomatch>
  </Operation>
</Patch>